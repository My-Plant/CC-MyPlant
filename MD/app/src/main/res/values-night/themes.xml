<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kepston" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/abuijo</item>
    </style>
    <style name="MyTheme.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundStacked">@android:color/transparent</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionbarIjo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/abuijo</item>
        <item name="colorPrimaryVariant">@color/abuijo</item>
        <item name="colorOnPrimary">@color/abuijo</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/abuijo</item>
        <item name="colorSecondaryVariant">@color/abuijo</item>
        <item name="colorOnSecondary">@color/abuijo</item>
    </style>

    <style name="ActionbarIjomuda" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbarhasil</item>
        <item name="colorPrimaryVariant">@color/toolbarhasil</item>
        <item name="colorOnPrimary">@color/toolbarhasil</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/toolbarhasil</item>
        <item name="colorSecondaryVariant">@color/toolbarhasil</item>
        <item name="colorOnSecondary">@color/toolbarhasil</item>
    </style>
</resources>